<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RestauranteActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="96sp"
            android:layout_height="96sp"
            android:layout_margin="10sp"
            app:srcCompat="@color/colorAberto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtRestaurante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BoasVindas"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BoasVindas"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtHorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BoasVindas"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/txtRestaurantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/buscar_no_cardapio"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true" />
    </LinearLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="0dp"
            android:verticalSpacing="0dp" />

    </FrameLayout>

</LinearLayout>